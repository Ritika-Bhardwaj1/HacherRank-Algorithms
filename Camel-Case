import java.util.Scanner;
public class Camel{
    public static void main(String args[]){
        Scanner scan = new Scanner (System.in);
        String s = scan.next();
        int c =1;
        for (int i =0; i<s.length(); i++){
            char a = s.charAt(i);                              //extracting characters from a string 
            if (s.charAt(i) >='A' && s.charAt(i)<= 'Z'){       //if the char at index i is capital increase the count variable 
                c++;
            }
        }
        System.out.println (c);
    }
}
